<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.PasswordField?>
<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="600.0" prefWidth="800.0"
            style="-fx-background-color: #8ab48f;"
            xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.tank2d.tankverse.ui.CreateRoomController">

    <!-- Main Create Room Container -->
    <VBox fx:id="createRoomContainer" alignment="CENTER" layoutX="175.0" layoutY="70.0" prefHeight="460.0" prefWidth="450.0"
          spacing="15.0"
          style="-fx-background-color: #f4e8c1; -fx-border-color: #704214; -fx-border-width: 4; -fx-background-radius: 5; -fx-border-radius: 5;">

        <padding>
            <Insets bottom="25.0" left="35.0" right="35.0" top="25.0"/>
        </padding>

        <!-- Title -->
        <Label text="Create Room" textFill="#704214">
            <font>
                <Font name="System Bold" size="34.0"/>
            </font>
        </Label>

        <Label text="~ Setup Your Battle ~" textFill="#8a6f47">
            <font>
                <Font size="14.0"/>
            </font>
        </Label>

        <!-- Room Name -->
        <VBox spacing="6.0">
            <Label text="Room Name" textFill="#704214">
                <font>
                    <Font name="System Bold" size="13.0"/>
                </font>
            </Label>
            <TextField fx:id="txtRoomName" promptText="Enter room name..."
                       prefHeight="38.0"
                       style="-fx-background-color: white;
                           -fx-border-color: #8a6f47;
                           -fx-border-width: 2;
                           -fx-background-insets: 0;
                           -fx-border-insets: 0;">
                <font>
                    <Font size="13.0"/>
                </font>
            </TextField>
        </VBox>

        <!-- Max Players -->
        <VBox spacing="6.0">
            <Label text="Max Players" textFill="#704214">
                <font>
                    <Font name="System Bold" size="13.0"/>
                </font>
            </Label>
            <ComboBox fx:id="cmbMaxPlayers" prefHeight="38.0" prefWidth="380.0"
                      promptText="Select max players..."
                      style="-fx-background-color: white;
                          -fx-border-color: #8a6f47;
                          -fx-border-width: 2;">
            </ComboBox>
        </VBox>

        <!-- Room Password -->
        <VBox spacing="6.0">
            <Label text="Room Password (optional)" textFill="#704214">
                <font>
                    <Font name="System Bold" size="13.0"/>
                </font>
            </Label>
            <PasswordField fx:id="txtPassword" promptText="Leave empty for no password"
                       prefHeight="38.0"
                       style="-fx-background-color: white;
                           -fx-border-color: #8a6f47;
                           -fx-border-width: 2;
                           -fx-background-insets: 0;
                           -fx-border-insets: 0;">
                <font>
                    <Font size="12.0"/>
                </font>
            </PasswordField>
        </VBox>

        <!-- Status Label -->
        <Label fx:id="lblStatus" text="" textFill="#c54245" wrapText="true">
            <font>
                <Font size="11.0"/>
            </font>
        </Label>

        <!-- Buttons -->
        <HBox spacing="12.0" alignment="CENTER">
            <VBox.margin>
                <Insets top="5.0"/>
            </VBox.margin>

            <Button fx:id="btnCreate" mnemonicParsing="false"
                    onAction="#onCreate" prefHeight="42.0" prefWidth="170.0" text="Create"
                    style="-fx-background-color: #6b9080;
                        -fx-border-color: #4a6859;
                        -fx-border-width: 3;
                        -fx-text-fill: white;">
                <font>
                    <Font name="System Bold" size="14.0"/>
                </font>
            </Button>

            <Button fx:id="btnCancel" mnemonicParsing="false"
                    onAction="#onCancel" prefHeight="42.0" prefWidth="170.0" text="Cancel"
                    style="-fx-background-color: #c54245;
                        -fx-border-color: #8b2e31;
                        -fx-border-width: 3;
                        -fx-text-fill: white;">
                <font>
                    <Font name="System Bold" size="14.0"/>
                </font>
            </Button>
        </HBox>

    </VBox>

    <!-- Decorative elements -->
    <Label layoutX="20.0" layoutY="20.0" text="âš”ï¸" textFill="#704214">
        <font>
            <Font size="28.0"/>
        </font>
    </Label>
    <Label layoutX="750.0" layoutY="20.0" text="ðŸ›¡ï¸" textFill="#704214">
        <font>
            <Font size="28.0"/>
        </font>
    </Label>

</AnchorPane>