<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="600.0" prefWidth="800.0"
            style="-fx-background-color: #8ab48f;"
            xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.tank2d.tankverse.ui.LoginController">

    <!-- Main Login Container -->
    <VBox fx:id="loginContainer" alignment="CENTER" layoutX="225.0" layoutY="100.0" prefHeight="400.0" prefWidth="350.0"
          spacing="15.0" style="-fx-background-color: #f4e8c1; -fx-border-color: #704214; -fx-border-width: 4; -fx-background-radius: 5; -fx-border-radius: 5;">

        <padding>
            <Insets bottom="25.0" left="30.0" right="30.0" top="25.0" />
        </padding>

        <!-- Game Title -->
        <Label text="Tank 2D" textFill="#704214">
            <font>
                <Font name="System Bold" size="38.0" />
            </font>
        </Label>

        <Label text="~ Welcome ~" textFill="#8a6f47">
            <font>
                <Font size="16.0" />
            </font>
        </Label>

        <!-- Username Field -->
        <VBox spacing="6.0">
            <Label text="Username" textFill="#704214">
                <font>
                    <Font name="System Bold" size="13.0" />
                </font>
            </Label>
            <TextField fx:id="txtUsername" promptText="Enter your name"
                       prefHeight="38.0"
                       style="-fx-background-color: white;
                           -fx-border-color: #8a6f47;
                           -fx-border-width: 2;
                           -fx-background-insets: 0;
                           -fx-border-insets: 0;">
                <font>
                    <Font size="13.0" />
                </font>
            </TextField>
        </VBox>

        <!-- Password Field -->
        <VBox spacing="6.0">
            <Label text="Password" textFill="#704214">
                <font>
                    <Font name="System Bold" size="13.0" />
                </font>
            </Label>
            <PasswordField fx:id="txtPassword" promptText="Enter password"
                           prefHeight="38.0"
                           style="-fx-background-color: white;
                               -fx-border-color: #8a6f47;
                               -fx-border-width: 2;
                               -fx-background-insets: 0;
                               -fx-border-insets: 0;">
                <font>
                    <Font size="13.0" />
                </font>
            </PasswordField>
        </VBox>

        <!-- Status Message Label -->
        <Label fx:id="lblStatus" text="Connecting..." textFill="#c54245" wrapText="true">
            <font>
                <Font size="11.0" />
            </font>
        </Label>

        <!-- Login Button -->
        <Button fx:id="btnLogin" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                onAction="#onLoginClick" prefHeight="42.0" text="Login" textFill="white"
                style="-fx-background-color: #6b9080;
                     -fx-border-color: #4a6859;
                     -fx-border-width: 3;">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Button>

        <!-- Register Button -->
        <Button fx:id="btnRegister" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                onAction="#onRegisterClick" prefHeight="38.0" text="Create Account"
                style="-fx-background-color: #d4a574;
                     -fx-border-color: #a67c52;
                     -fx-border-width: 3;
                     -fx-text-fill: white;">
            <font>
                <Font name="System Bold" size="13.0" />
            </font>
        </Button>

    </VBox>

