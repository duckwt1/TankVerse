<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="600.0" prefWidth="800.0"
            style="-fx-background-color: #8ab48f;"
            xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.tank2d.tankverse.ui.WaitingRoomController">

    <!-- Main Waiting Room Container -->
    <VBox fx:id="waitingRoomContainer" alignment="TOP_CENTER" layoutX="150.0" layoutY="60.0" prefHeight="480.0" prefWidth="500.0"
          spacing="12.0" style="-fx-background-color: #f4e8c1; -fx-border-color: #704214; -fx-border-width: 4; -fx-background-radius: 5; -fx-border-radius: 5;">

        <padding>
            <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
        </padding>

        <!-- Title -->
        <Label text="Waiting Room" textFill="#704214">
            <font>
                <Font name="System Bold" size="34.0" />
            </font>
        </Label>

        <!-- Room Info -->
        <VBox spacing="4.0" alignment="CENTER">
            <Label fx:id="lblRoomName" text="Room: Loading..." textFill="#704214">
                <font>
                    <Font name="System Bold" size="15.0" />
                </font>
            </Label>

            <Label fx:id="lblPlayerCount" text="Players: 0/4" textFill="#8a6f47">
                <font>
                    <Font size="13.0" />
                </font>
            </Label>
        </VBox>

        <!-- Players List -->
        <VBox spacing="6.0">
            <VBox.margin>
                <Insets top="5.0" />
            </VBox.margin>

            <Label text="Players in Room:" textFill="#704214">
                <font>
                    <Font name="System Bold" size="13.0" />
                </font>
            </Label>

            <ListView fx:id="listPlayers" prefHeight="200.0" prefWidth="440.0"
                      style="-fx-background-color: white;
                          -fx-border-color: #8a6f47;
                          -fx-border-width: 3;">
            </ListView>
        </VBox>

        <!-- Status Label -->
        <Label fx:id="lblStatus" text="Waiting for other players..." textFill="#8a6f47" wrapText="true">
            <font>
                <Font size="12.0" />
            </font>
        </Label>

        <!-- Buttons -->
        <HBox spacing="10.0" alignment="CENTER">
            <VBox.margin>
                <Insets top="5.0" />
            </VBox.margin>

            <!-- Ready Button -->
            <Button fx:id="btnReady" mnemonicParsing="false" visible="false"
                    onAction="#onReady" prefHeight="40.0" prefWidth="140.0" text="Ready"
                    style="-fx-background-color: #6b9080;
                        -fx-border-color: #4a6859;
                        -fx-border-width: 3;
                        -fx-text-fill: white;">
                <font>
                    <Font name="System Bold" size="13.0" />
                </font>
            </Button>

            <!-- Start Game Button -->
            <Button fx:id="btnStartGame" mnemonicParsing="false" visible="false"
                    onAction="#onStartGame" prefHeight="40.0" prefWidth="140.0" text="Start Game"
                    style="-fx-background-color: #6b9080;
                        -fx-border-color: #4a6859;
                        -fx-border-width: 3;
                        -fx-text-fill: white;">
                <font>
                    <Font name="System Bold" size="13.0" />
                </font>
            </Button>

            <!-- Leave Room Button -->
            <Button fx:id="btnLeaveRoom" mnemonicParsing="false"
                    onAction="#onLeaveRoom" prefHeight="40.0" prefWidth="140.0" text="Leave Room"
                    style="-fx-background-color: #c54245;
                        -fx-border-color: #8b2e31;
                        -fx-border-width: 3;
                        -fx-text-fill: white;">
                <font>
                    <Font name="System Bold" size="13.0" />
                </font>
            </Button>
        </HBox>

    </VBox>

